#include<stdio.h>
#include<string.h>
int main(){
int i;int j,n;
scanf("%d",&n);
for(i=0;i<n;i++)
{
       for(j=0;j<i+1;j++)
            {
                printf("*");
            }
printf("\n");
}
for(i=0;i<n-1;i++)
{
       for(j=0;j<3-i;j++)
            {
                printf("*");
            }
        
printf("\n");
}
}
